{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "pot2D",
      "hidden": true,
      "cacheVariables": {
        "GRVX_POT_TYPE": "2D"
      }
    },
    {
      "name": "pot3D",
      "hidden": true,
      "cacheVariables": {
        "GRVX_POT_TYPE": "3D"
      }
    },
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "inherits": "cmake-pedantic",
      "cacheVariables": {
        "libgravix2_DEVELOPER_MODE": "ON"
      }
    },
    {
      "name": "cppcheck",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_CPPCHECK": "cppcheck;--inline-suppr"
      }
    },
    {
      "name": "clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_CLANG_TIDY": "clang-tidy;--header-filter=${sourceDir}/*"
      }
    },
    {
      "name": "sanitize",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SANITIZER": "ON"
      }
    },
    {
      "name": "cstd",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_EXTENSIONS": "OFF",
        "CMAKE_C_STANDARD": "11",
        "CMAKE_C_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "flags",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wshadow -Wformat=2 -Wundef -Werror -Wwrite-strings"
      }
    },
    {
      "name": "make",
      "generator": "Unix Makefiles",
      "hidden": true,
      "inherits": ["flags", "cstd"]
    },
    {
      "name": "debug",
      "binaryDir": "${sourceDir}/build/debug",
      "inherits": "make",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "release",
      "binaryDir": "${sourceDir}/build/release",
      "inherits": "make",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": "debug",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_COVERAGE": "ON",
        "CMAKE_BUILD_TYPE": "Coverage",
        "CMAKE_C_FLAGS_COVERAGE": "--coverage -fkeep-inline-functions -fkeep-static-functions",
        "CMAKE_EXE_LINKER_FLAGS_COVERAGE": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS_COVERAGE": "--coverage"
      }
    },
    {
      "name": "docs",
      "inherits": "release",
      "binaryDir": "${sourceDir}/build/docs",
      "cacheVariables": {
        "BUILD_DOCS": "ON"
      }
    },
    {
      "name": "ci-coverage",
      "inherits": ["coverage", "dev-mode"],
      "cacheVariables": {
        "COVERAGE_HTML_COMMAND": ""
      }
    },
    {
      "name": "ci-sanitize",
      "binaryDir": "${sourceDir}/build/sanitize",
      "inherits": ["debug", "dev-mode", "sanitize"]
    },
    {
      "name": "ci-debug",
      "binaryDir": "${sourceDir}/build/ci-debug",
      "inherits": ["debug", "clang-tidy", "cppcheck", "dev-mode"]
    },
    {
      "name": "ci-release",
      "binaryDir": "${sourceDir}/build/ci-release",
      "inherits": ["release", "dev-mode"]
    }
  ]
}
